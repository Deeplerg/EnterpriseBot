{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",

  "ConnectionStrings": {
    "ErrorsSQLite": "Data Source=Errors.db;"
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      }
    ],

    "Enrich": [ "FromLogContext" ]
  },

  "VkSettings": {
    "DefaultGroupId": 184296788,
    "Groups": [
      {
        "GroupId": 184296788,
        "AccessToken": "supersecrettoken",
        "SecretKey": "supersecretkey",
        "Confirmation": "supersecretconfirmation"
      }
    ],
    "ReturnOkEvenIfItIsNot": true,

    "Links": {
      "VkDomain": "https://vk.com/",
      "EntbotVkName": "entbot",
      "EntbotSupportVkName": "entbotsupp"
    }
  },

  "ApiSettings": {
    "ApiServerUrl": "http://localhost:5010",
    "Localization": "Russian"
  }
}
